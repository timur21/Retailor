<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassActivity">

    <com.hanks.passcodeview.PasscodeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/passcode_view"
        android:background="#ffcd00"
        app:firstInputTip="Введите 4-х значный пароль"
        app:correctStateColor="@android:color/holo_green_light"
        app:wrongStateColor="@android:color/holo_red_light"
        app:numberTextColor="@android:color/darker_gray"
        />

</RelativeLayout>